generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Fan {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  uuid           String   @unique
  profilePicture String
  timestamp      DateTime?
  dob            String
  email          String
  fullname       String
  location       String
  username       String
  signature      String?
  anthem         Anthem?
}

type Anthem {
  id          String
  name        String
  preview_url  String
  track_url    String
  artists     Artist[]
  images      Image[]
  album_name   String
  album_type   String
  album_group  String
  release_date String
}

type Artist {
  id   String
  name String
}

type Image {
  url    String
  height Int
  width  Int
}
